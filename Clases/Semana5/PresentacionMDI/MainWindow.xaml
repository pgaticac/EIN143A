<Window x:Class="PresentacionMDI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentacionMDI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFDADADA">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
               
        <StackPanel Grid.Column="0">
             <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Menú" VerticalAlignment="Top" Width="200" Height="26"/>
             <Button x:Name="mnuCategorias" Content="Categorias" Height="40" Width="200" Background="Transparent" BorderThickness="0" Click="MnuCategorias_Click" />
        </StackPanel>

        <Grid x:Name="grdMain" Grid.Column="1"></Grid>
    </Grid>
</Window>
