<UserControl x:Class="PresentacionMDI.Forms.UcCategorias"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentacionMDI.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600" Loaded="UserControl_Loaded">
    <Grid Background="#FFDADADA">
        <Label Content="Categorías" HorizontalAlignment="Left" Margin="52,32,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <DataGrid x:Name="dgCategorias" 
                  HorizontalAlignment="Left" 
                  Height="194" Margin="283,105,0,0" VerticalAlignment="Top" Width="275"
                  AutoGenerateColumns="False" ColumnWidth="*">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" />
            </DataGrid.Columns>
            
        </DataGrid>

    </Grid>
</UserControl>
